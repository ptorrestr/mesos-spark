[Unit]
After=network-online.target
Description=Install docker registry
Documentation=https://github.com/docker/docker-registry
Requires=network-online.target

[Service]
ExecStart=/bin/bash -c "if [ ! -d /home/core/docker-registry ];then /usr/bin/wget https://github.com/docker/docker-registry/archive/0.8.1.tar.gz; tar -zxvf 0.8.1.tar.gz; mv /docker-registry-0.8.1 /home/core/docker-registry; rm /0.8.1.tar.gz; fi"
ExecStart=/usr/bin/cp /home/core/docker-registry/config/config_sample.yml /home/core/docker-registry/config.yml
ExecStart=/usr/bin/docker build -t jveverka/registry /home/core/docker-registry
RemainAfterExit=yes
Type=oneshot

[X-Fleet]
MachineID={{ registry_host.results[0].ID }}
